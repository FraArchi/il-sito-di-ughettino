{
  "name": "ugo-ai-backend-tests",
  "version": "1.0.0",
  "description": "Test suite for Ugo AI Backend",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit --testTimeout=10000",
    "test:integration": "jest tests/integration --testTimeout=30000",
    "test:performance": "jest tests/performance --testTimeout=180000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/app.js",
      "!**/*.test.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testTimeout": 30000,
    "maxWorkers": 1
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "autocannon": "^7.12.0"
  },
  "dependencies": {
    "axios": "^1.6.2"
  }
}
